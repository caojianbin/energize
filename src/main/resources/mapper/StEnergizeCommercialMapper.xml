<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.showtime.serviceenergize.mapper.StEnergizeCommercialMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.showtime.serviceenergize.entity.StEnergizeCommercial">
        <id column="id" property="id" />
        <result column="ct_id" property="ctId" />
        <result column="ct_name" property="ctName" />
        <result column="ct_identification_code" property="ctIdentificationCode" />
        <result column="ct_principal" property="ctPrincipal" />
        <result column="ct_phone_number" property="ctPhoneNumber" />
        <result column="ct_address" property="ctAddress" />
        <result column="ct_status" property="ctStatus" />
        <result column="ct_start_time" property="ctStartTime" />
        <result column="ct_end_time" property="ctEndTime" />
        <result column="create_name" property="createName" />
        <result column="create_time" property="createTime" />
        <result column="update_name" property="updateName" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        ct_id, ct_name, ct_identification_code, ct_principal, ct_phone_number, ct_address, ct_status, ct_start_time, ct_end_time, create_name, create_time, update_name, update_time, id
    </sql>
    <select id="selectCommercialList" resultType="com.showtime.serviceenergize.entity.StEnergizeCommercial">
        SELECT
            ct_id,
            ct_name,
            ct_identification_code,
            ct_principal,
            ct_phone_number,
            ct_address,
            ct_status,
            ct_start_time,
            ct_end_time,
            create_name,
            create_time,
            update_name,
            update_time,
            id
         FROM
            st_energize_commercial
         <where>
             <if test='ctName != null and ctName != ""'>
                 ct_name LIKE concat(concat('%',#{ctName}),'%')
             </if>
         </where>

    </select>
    <select id="selectCommercialByCtId" resultType="com.showtime.serviceenergize.entity.StEnergizeCommercial">
        SELECT
            ct_name
        FROM
            st_energize_commercial
        WHERE
           ct_identification_code = #{ctIdentificationCode}
    </select>

</mapper>
